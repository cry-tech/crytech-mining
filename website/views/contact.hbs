<!--========== PAGE CONTENT ==========-->
<section class="container g-padding-y-30--xs g-margin-b-50--xs wow fadeIn" data-wow-delay='0.9s'>
  <div class="row text-center">
    <h2
      class="s-cry-title g-font-size-26--xs g-font-size-34--sm g-display-inline-block--xs g-margin-b-30--xs g-font-weight--700">
      Send Us your message</h2>
    <form id="Form" name="Form" method="POST" action="/Contact.html">
      <div class="col-xs-12 col-sm-6 g-margin-b-20--xs">
        <input type="text" class="form-control g-font-size-16--xs s-form-v4__input" name="Name" id="Name"
          placeholder="* Name">
      </div>
      <div class="col-xs-12 col-sm-6 g-margin-b-20--xs">
        <input type="email" class="form-control g-font-size-16--xs s-form-v4__input" name="Email" id="Email"
          placeholder="* Email">
      </div>
      <div class="col-xs-12 g-margin-b-40--xs">
        <textarea class="form-control g-font-size-16--xs s-form-v4__input g-padding-y-20--xs" rows="3" name="Message"
          id="Message" placeholder="* Your Message"></textarea>
      </div>
      <div class="g-text-center--xs">
        <button type="submit"
          class="s-btn s-btn--primary-bg g-z-index--2 g-position--relative g-padding-y-5--xs g-radius--50 g-padding-x-80--xs">Send</button>
      </div>
    </form>
  </div>
</section>
<!--========== END PAGE CONTENT ==========-->

{{#contentFor "scripts"}}
<script src="vendor/jquery.wow.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/parallax/2.1.3/parallax.min.js"></script>
<script src="js/components/wow.min.js"></script>
<script src="vendor/jquery.validate.min.js"></script>
<script>
  $(document).ready(function () {
    $('#Form').validate({
      rules: {
        Name: {
          required: true
        },
        Email: {
          required: true,
          email: true
        },
        Message: {
          required: true
        }
      },
      messages: {
        Name: "Please fill this field",
        Email: {
          required: "Please enter your email",
          email: "please enter a valid email (with use of @)"
        },
        Message: "Please fill this field",
      },
      submitHandler: function (form) {
        $.ajax({
          type: 'POST',
          url: "/contact",
          contentType: "application/json",
          data: JSON.stringify({
            "email": $("#Email").val(),
            "name": $("#Name").val(),
            "message": $("#Message").val()
          }),
          success: function (result) {
            alert(result);
          }
        })

      }
    });
  });
</script>
<script>
  var scene = document.getElementById('js-scene');
  var Parallax = new Parallax(scene);
</script>
{{/contentFor}}